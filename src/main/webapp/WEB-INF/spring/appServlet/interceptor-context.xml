<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
    <mvc:annotation-driven/>
    
	<!-- Spring Interceptor -->
	<!-- 링크 이동시 가로챔 -->
	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/**" /> <!-- 모든 링크에 대하여 Interceptor -->
			<mvc:exclude-mapping path="/resources/**" /> <!--리소스 파일 제외 -->
			<mvc:exclude-mapping path="/login" /> 
			<mvc:exclude-mapping path="/join" />
			<bean class="com.cglee079.ppaldak.interceptor.SessionInterceptor"></bean> <!-- Interceptor 클래스 (Custom) -->
		</mvc:interceptor>
	</mvc:interceptors>
</beans>
